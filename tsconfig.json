{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/",
    "sourceMap": false,
    "noImplicitAny": false,
    "module": "es2015",
    "target": "es6",
    "lib": ["es2015", "dom"],
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types/", "./types/"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowUmdGlobalAccess": true
  },
  "exclude": ["node_modules"]
}
